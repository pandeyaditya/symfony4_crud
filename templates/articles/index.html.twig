{% extends 'base.html.twig' %}

{% block title %}
	
	SymphArt Articles

{% endblock %}

{% block body %}
	{% if articles %}
	<table id="articles" class="table table-stripped">
	<thead>
	<tr>
		<th>Article Title</th>
		<th>Body</th>
	</tr>
	</thead>
	<tbody>
	{% for article in articles %}
		<p>
			<tr>
			<td>{{ article.title }}</td>
			<td>
				<a href="/article/{{article.id}}" class="btn btn-dark">Show</a>
				<a href="/article/edit/{{article.id}}" class="btn btn-light">Edit</a>
				<a href="#" class="btn btn-danger delete-article" data-id="{{article.id}}">Delete</a>
			</td>
		</tr>
		<p>
	{% endfor %}
	</tbody>
	</table>
	{% else %}
		<p> No articles found </p>
	{% endif %}

{% endblock %}

{% block javascripts %}
	<script src="/js/main.js"></script>
{% endblock %}